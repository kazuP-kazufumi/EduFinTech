<%# 投稿一覧ページ %>
<div>
  <%# ページヘッダー %>
  <div class="page-header">
    <h1>資金調達の投稿一覧</h1>
    <p>
      資金調達に関する投稿を閲覧できます。新しい投稿を作成して、あなたのプロジェクトを共有しましょう。
    </p>
  </div>

  <%# 検索・フィルタリングフォーム %>
  <%= form_with(url: posts_path, method: :get, class: "search-form") do |f| %>
    <div class="search-form__grid">
      <div>
        <%= render "shared/form_field", 
          form: f, 
          attribute: :search, 
          label_text: "キーワード検索", 
          field_type: :text_field, 
          options: { value: params[:search], placeholder: "タイトルまたは内容で検索" }, 
          html_options: {} 
        %>
      </div>

      <div>
        <%= render "shared/form_field", 
          form: f, 
          attribute: :category, 
          label_text: "カテゴリー", 
          field_type: :select, 
          options: { selected: params[:category] || 'all' }, 
          html_options: {}, 
          collection: [['すべて', 'all']] + @categories.map { |c| [c, c] }
        %>
      </div>

      <div>
        <%= render "shared/form_field", 
          form: f, 
          attribute: :sort, 
          label_text: "並び順", 
          field_type: :select, 
          options: { selected: params[:sort] || 'newest' }, 
          html_options: {}, 
          collection: [['新しい順', 'newest'], ['古い順', 'oldest']]
        %>
      </div>
    </div>

    <div class="search-form__actions">
      <%= f.submit "検索", class: "button button--primary button--small" %>
    </div>
  <% end %>

  <%# 新規投稿ボタン %>
  <% if user_signed_in? %>
    <div class="post-actions">
      <%= render "shared/button", 
        text: "新規投稿", 
        type: :primary, 
        size: :medium, 
        url: new_post_path, 
        html_options: {} 
      %>
    </div>
  <% end %>

  <%# 投稿一覧 %>
  <div class="posts-list">
    <% @posts.each do |post| %>
      <% 
        # 投稿の内容を生成
        content_html = capture do 
      %>
        <div class="post-card__header">
          <div class="post-card__title-area">
            <h2>
              <%= link_to post.title, post_path(post) %>
            </h2>
            <p>
              投稿者: <%= post.user.email %> | 
              投稿日時: <%= l post.created_at, format: :long %>
            </p>
          </div>
          <span class="post-card__category">
            <%= post.category %>
          </span>
        </div>

        <div class="post-card__content">
          <p><%= post.content %></p>
        </div>
      <% end %>

      <% 
        # 投稿のフッターを生成（編集、削除ボタン）
        footer_html = nil
        if user_signed_in? && current_user == post.user
          footer_html = capture do 
      %>
        <div class="post-card__actions">
          <%= render "shared/button", 
            text: "編集", 
            type: :secondary, 
            size: :small, 
            url: edit_post_path(post), 
            html_options: {} 
          %>
          <%= render "shared/button", 
            text: "削除", 
            type: :danger, 
            size: :small, 
            url: post_path(post), 
            method: :delete, 
            html_options: { data: { turbo_confirm: "本当に削除しますか？" } } 
          %>
        </div>
      <% 
          end
        end 
      %>

      <%= render "shared/card", 
        title: nil,
        content_html: content_html,
        footer_html: footer_html,
        html_options: { class: "post-card" }
      %>
    <% end %>

    <% if @posts.empty? %>
      <div class="empty-state">
        <h3>投稿がありません</h3>
        <p>最初の投稿を作成してみましょう。</p>
        <% if user_signed_in? %>
          <div>
            <%= render "shared/button", 
              text: "新規投稿", 
              type: :primary, 
              size: :medium, 
              url: new_post_path, 
              html_options: {} 
            %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# ページネーション %>
  <div class="pagination">
    <%= paginate @posts %>
  </div>
</div>
