<%# 投稿フォームのパーシャル。新規作成と編集で共通利用される %>
<%= form_with(model: post, class: "form") do |f| %>
  <%# エラーメッセージパーシャルを使用 %>
  <%= render "shared/error_messages", resource: post %>

  <%# タイトル入力フィールド %>
  <%= render "shared/form_field", 
    form: f, 
    attribute: :title, 
    label_text: "タイトル", 
    field_type: :text_field, 
    options: {}, 
    html_options: {} 
  %>

  <%# カテゴリー選択フィールド %>
  <%= render "shared/form_field", 
    form: f, 
    attribute: :category, 
    label_text: "カテゴリー", 
    field_type: :select, 
    options: {}, 
    html_options: {}, 
    collection: Post::CATEGORIES 
  %>

  <%# 投稿内容入力フィールド %>
  <%= render "shared/form_field", 
    form: f, 
    attribute: :content, 
    label_text: "内容", 
    field_type: :text_area, 
    options: { rows: 10 }, 
    html_options: {} 
  %>

  <%# フォーム送信ボタン %>
  <div class="form__actions">
    <%= f.submit "投稿する", class: "button button--primary button--medium" %>
  </div>
<% end %> 