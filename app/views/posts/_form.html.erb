<%# 投稿フォームのパーシャル。新規作成と編集で共通利用される %>
<%# form_withヘルパーを使用してフォームを生成。modelオプションでpostオブジェクトを指定し、Tailwindのスタイリングを適用 %>
<%= form_with(model: post, class: "space-y-6") do |f| %>
  <%# バリデーションエラーがある場合のエラーメッセージ表示セクション %>
  <% if post.errors.any? %>
    <%# エラーメッセージを赤色の背景のアラートボックスで表示 %>
    <div class="bg-red-50 p-4 rounded-md">
      <div class="flex">
        <%# エラーアイコンの表示。SVGを使用して警告アイコンを描画 %>
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <%# エラーメッセージの詳細表示部分 %>
        <div class="ml-3">
          <%# エラー数を表示。pluralizeヘルパーで複数形に対応 %>
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(post.errors.count, "個のエラー") %>があります：
          </h3>
          <%# 各エラーメッセージをリスト形式で表示 %>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# タイトル入力フィールドのセクション %>
  <div>
    <%# タイトルのラベル。アクセシビリティのためにlabelタグを使用 %>
    <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%# タイトル入力用のテキストフィールド。フォーカス時のスタイリングも設定 %>
      <%= f.text_field :title, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <%# 投稿内容入力フィールドのセクション %>
  <div>
    <%# 内容のラベル %>
    <%= f.label :content, "内容", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%# 複数行入力可能なテキストエリア。5行分の高さを指定 %>
      <%= f.text_area :content, rows: 5, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <%# フォーム送信ボタンのセクション %>
  <div class="flex justify-end">
    <%# submitボタン。ホバー時やフォーカス時のスタイリングを含む %>
    <%= f.submit "投稿する", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 