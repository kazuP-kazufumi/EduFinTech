<%# ログインページ %>
<div class="auth">
  <%# ページヘッダー %>
  <div class="page-header">
    <h1>ログイン</h1>
    <p>アカウントにログインして、EduFinTechを利用しましょう</p>
  </div>

  <%# フォーム %>
  <div class="auth__form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "auth__form") do |f| %>
      <div class="auth__form-fields">
        <%# メールアドレス %>
        <%= render "shared/form_field", 
          form: f, 
          attribute: :email, 
          label_text: "メールアドレス", 
          field_type: :email_field, 
          options: { autofocus: true, autocomplete: "email" }, 
          html_options: {} 
        %>

        <%# パスワード %>
        <%= render "shared/form_field", 
          form: f, 
          attribute: :password, 
          label_text: "パスワード", 
          field_type: :password_field, 
          options: { autocomplete: "current-password" }, 
          html_options: {} 
        %>

        <%# ログイン状態を保持 %>
        <% if devise_mapping.rememberable? %>
          <div class="auth__remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持" %>
          </div>
        <% end %>

        <%# ログインボタン %>
        <div class="auth__form-actions">
          <%= f.submit "ログイン", class: "button button--primary button--medium" %>
        </div>
      </div>
    <% end %>

    <%# 新規登録リンク %>
    <div class="auth__links">
      <p>
        アカウントをお持ちでない方は
        <%= render "shared/button", 
          text: "新規登録", 
          type: :secondary, 
          size: :small, 
          url: new_user_registration_path, 
          html_options: {} 
        %>
      </p>
    </div>
  </div>
</div>
