<%# カードコンポーネントを表示する共通パーシャル %>
<%# @param title [String] カードのタイトル（省略可） %>
<%# @param content_html [String] カードの内容（必須） %>
<%# @param footer_html [String] カードのフッター（省略可） %>
<%# @param html_options [Hash] HTML属性（class: "...", data: {...} など） %>

<%# デフォルト値の設定 %>
<% html_options ||= {} %>
<% additional_classes = html_options.delete(:class) || "" %>

<div class="card <%= additional_classes %>" <%= html_options.map { |k, v| "#{k}=\"#{v}\"" }.join(' ').html_safe %>>
  <% if title.present? %>
    <div class="card-header">
      <h5 class="card-title mb-0"><%= title %></h5>
    </div>
  <% end %>
  
  <div class="card-body">
    <%= content_html.html_safe %>
  </div>
  
  <% if footer_html.present? %>
    <div class="card-footer">
      <%= footer_html.html_safe %>
    </div>
  <% end %>
</div> 